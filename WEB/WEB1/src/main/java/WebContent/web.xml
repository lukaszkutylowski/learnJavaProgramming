< ?xml version="1.0" encoding="UTF-8"? >
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee">
<display-name>First Servlet App</display-name>
<welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
</welcome-file-list>
<servlet>
    <servlet-name>First Servlet</servlet-name>
    <servlet-class>dev.javaee.servlets.FirstServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>First Servlet</servlet-name>
    <url-pattern>/textApp</url-pattern>
</servlet-mapping>
<servlet>
    <servlet-name>Second Servlet</servlet-name>
    <servlet-class>dev.javaee.servlets.SecondServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>Second Servlet</servlet-name>
    <url-pattern>/binaryApp</url-pattern>
</servlet-mapping>
servlet>
<servlet-name>Third Servlet</servlet-name>
<servlet-class>dev.javaee.servlets.ThirdServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>Third Servlet</servlet-name>
<url-pattern>/showImageApp</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>Cookie Servlet</servlet-name>
<servlet-class>dev.javaee.servlets.CookieServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>Cookie Servlet</servlet-name>
<url-pattern>/cookie</url-pattern>
</servlet-mapping>

</web-app>